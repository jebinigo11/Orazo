package com.example.loginformauth.user;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.security.crypto.password.PasswordEncoder;
import org.springframework.stereotype.Service;

import java.util.Optional;

@Service
public class AppUserService {

    @Autowired
    private AppUserRepository userRepository;

    @Autowired
    private PasswordEncoder passwordEncoder;

    public void saveUser(AppUser user, String rawPassword) {
        user.setPasswordHash(passwordEncoder.encode(rawPassword)); // encode raw password
        user.setEnabled(true); // make sure user is enabled
        userRepository.save(user);
    }

    public Optional<AppUser> findByCustomerId(String customerId) {
        return userRepository.findByCustomerId(customerId);
    }
}
